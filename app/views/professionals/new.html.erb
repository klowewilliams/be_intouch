<h2> Create Professional Profile Page </h2>

<%= form_tag '/professionals', method: :post do %>
<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @professional ? @professional.name : nil%>
</div>

<div>
  <%= label_tag :company %>
  <%= text_field_tag :company, @professional ? @professional.company : nil %>
</div>

<div>
  <%= label_tag :title %>
  <%= text_field_tag :title, @professional ? @professional.title : nil %>
</div>

<div>
  <%= submit_tag "Submit" %>
</div>

<% end %>